@model ForgotPasswordViewModel
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = Localizer["PageTitle"];
}

<div class="auth-container">
  <div class="auth-card">
    <!-- Logo -->
    <div class="auth-logo">
      <svg viewBox="0 0 200 50" fill="currentColor">
        <text x="50%" y="35" text-anchor="middle" font-size="32" font-weight="700" font-family="Inter, sans-serif">SmartSkor</text>
      </svg>
    </div>

    <!-- Header -->
    <div class="auth-header">
      <h1>@Localizer["Heading"]</h1>
      <p>@Localizer["Subtitle"]</p>
    </div>

    <!-- Error Messages -->
    @if (ViewData.ModelState.TryGetValue(string.Empty, out var entry) && entry.Errors.Count > 0)
    {
      <div class="alert alert-error">
        <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
        <div>
          @foreach (var error in entry.Errors)
          {
            <div>@error.ErrorMessage</div>
          }
        </div>
      </div>
    }

    <!-- Form -->
    <form asp-action="ForgotPassword" asp-controller="Account" method="post" novalidate>
      <!-- Email -->
      <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-input" type="email" autocomplete="email" />
        <span asp-validation-for="Email" class="field-error"></span>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary">@Localizer["SendResetLink"]</button>
    </form>

    <!-- Footer -->
    <p class="auth-footer">
      <a asp-action="Login" asp-controller="Account">@Localizer["BackToLogin"]</a>
    </p>
  </div>
</div>