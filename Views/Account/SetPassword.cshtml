@model SetPasswordViewModel
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = Localizer["PageTitle"];
  var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-logo">
      <svg viewBox="0 0 200 50" fill="currentColor">
        <text x="50%" y="35" text-anchor="middle" font-size="32" font-weight="700" font-family="Inter, sans-serif">SmartSkor</text>
      </svg>
    </div>

    <div class="auth-header">
      <h1>@Localizer["Heading"]</h1>
      <p>@Localizer["Subtitle"]</p>
    </div>

    @if (ViewData.ModelState.TryGetValue(string.Empty, out var entry) && entry.Errors.Count > 0)
    {
      <div class="alert alert-error">
        <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
        <div>
          @foreach (var error in entry.Errors)
          {
            <div>@error.ErrorMessage</div>
          }
        </div>
      </div>
    }

    <form asp-action="SetPassword" asp-controller="Account" method="post" novalidate>
      <input type="hidden" asp-for="Email" />
      <input type="hidden" asp-for="Code" />
      <input type="hidden" name="returnUrl" value="@returnUrl" />

      <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <div class="input-wrapper">
          <input asp-for="Password" class="form-input" type="password" autocomplete="new-password" />
          <button type="button" class="input-toggle">
            <i data-lucide="eye" style="width: 20px; height: 20px;"></i>
            <i data-lucide="eye-off" style="width: 20px; height: 20px; display: none;"></i>
          </button>
        </div>
        <span asp-validation-for="Password" class="field-error"></span>
      </div>

      <div class="form-group">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <div class="input-wrapper">
          <input asp-for="ConfirmPassword" class="form-input" type="password" autocomplete="new-password" />
          <button type="button" class="input-toggle">
            <i data-lucide="eye" style="width: 20px; height: 20px;"></i>
            <i data-lucide="eye-off" style="width: 20px; height: 20px; display: none;"></i>
          </button>
        </div>
        <span asp-validation-for="ConfirmPassword" class="field-error"></span>
      </div>

      <button type="submit" class="btn btn-primary">@Localizer["SetPassword"]</button>
    </form>
  </div>
</div>