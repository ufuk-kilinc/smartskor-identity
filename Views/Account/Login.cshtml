@model LoginViewModel
@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = Localizer["PageTitle"];
}

<div class="auth-container">
  <div class="auth-card">
    <!-- Logo -->
    <div class="auth-logo">
      <svg viewBox="0 0 200 50" fill="currentColor">
        <text x="50%" y="35" text-anchor="middle" font-size="32" font-weight="700" font-family="Inter, sans-serif">SmartSkor</text>
      </svg>
    </div>

    <!-- Header -->
    <div class="auth-header">
      <h1>@Localizer["WelcomeBack"]</h1>
      <p>@Localizer["Subtitle"]</p>
    </div>

    <!-- Error Messages (for non-field errors like invalid credentials) -->
    @if (ViewData.ModelState.TryGetValue(string.Empty, out var entry) && entry.Errors.Count > 0)
    {
      <div class="alert alert-error">
        <i data-lucide="alert-circle" style="width: 16px; height: 16px;"></i>
        <div>
          @foreach (var error in entry.Errors)
          {
            <div>@error.ErrorMessage</div>
          }
        </div>
      </div>
    }

    <!-- Form -->
    <form asp-action="Login" asp-controller="Account" method="post" novalidate>
      <input type="hidden" asp-for="ReturnUrl" />

      <!-- Email -->
      <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-input" type="email" autocomplete="email" />
        <span asp-validation-for="Email" class="field-error"></span>
      </div>

      <!-- Password -->
      <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <div class="input-wrapper">
          <input asp-for="Password" class="form-input" type="password" autocomplete="current-password" />
          <button type="button" class="input-toggle">
            <i data-lucide="eye" style="width: 20px; height: 20px;"></i>
            <i data-lucide="eye-off" style="width: 20px; height: 20px; display: none;"></i>
          </button>
        </div>
        <span asp-validation-for="Password" class="field-error"></span>
      </div>

      <!-- Remember me & Forgot password -->
      <div class="form-row">
        <div class="checkbox-wrapper">
          <input asp-for="RememberMe" class="checkbox-input" type="checkbox" />
          <label asp-for="RememberMe" class="checkbox-label"></label>
        </div>
        <a asp-action="ForgotPassword" asp-controller="Account" class="link">@Localizer["ForgotPassword"]</a>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary">@Localizer["SignIn"]</button>
    </form>

    <!-- Divider -->
    <div class="divider">
      <span>@Localizer["OrContinueWith"]</span>
    </div>

    <!-- Google OAuth -->
    <form asp-action="ExternalLogin" asp-controller="Account" method="post">
      <input type="hidden" name="provider" value="Google" />
      <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
      <button type="submit" class="btn btn-outline">
        <svg class="google-icon" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
        </svg>
        @Localizer["SignInWithGoogle"]
      </button>
    </form>

    <!-- Footer -->
    <p class="auth-footer">
      @Localizer["NoAccount"] <a asp-action="Register" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["SignUp"]</a>
    </p>
  </div>
</div>