@inject IViewLocalizer Localizer
@{
  ViewData["Title"] = Localizer["PageTitle"];
  var email = ViewData["Email"] as string;
  var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-logo">
      <svg viewBox="0 0 200 50" fill="currentColor">
        <text x="50%" y="35" text-anchor="middle" font-size="32" font-weight="700" font-family="Inter, sans-serif">SmartSkor</text>
      </svg>
    </div>

    <div style="display: flex; justify-content: center; margin-bottom: 1.5rem;">
      <div style="width: 64px; height: 64px; background-color: var(--teal-50); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="var(--primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2" />
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
        </svg>
      </div>
    </div>

    <div class="auth-header">
      <h1>@Localizer["Heading"]</h1>
      <p>@Localizer["Subtitle"]</p>
    </div>

    @if (!string.IsNullOrEmpty(email))
    {
      <div style="text-align: center; margin-bottom: 1.5rem;">
        <p style="color: var(--muted); font-size: 0.875rem; margin-bottom: 0.5rem;">@Localizer["DidntReceive"]</p>
        <form asp-action="ResendVerificationEmail" asp-controller="Account" method="post" style="display: inline;">
          <input type="hidden" name="email" value="@email" />
          <input type="hidden" name="returnUrl" value="@returnUrl" />
          <button type="submit" class="link" style="background: none; border: none; cursor: pointer; font-size: 0.875rem;">
            @Localizer["ResendLink"]
          </button>
        </form>
      </div>
    }

    <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl" class="btn btn-outline" style="text-decoration: none;">
      @Localizer["BackToLogin"]
    </a>
  </div>
</div>