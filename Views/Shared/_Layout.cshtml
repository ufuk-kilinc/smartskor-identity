@{
  var requestCulture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
  var currentCulture = requestCulture?.RequestCulture?.UICulture?.Name ?? "en";
  var isEnglish = currentCulture.StartsWith("en");
  var currentUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
  var encodedReturnUrl = System.Net.WebUtility.UrlEncode(currentUrl);
  var immediateTheme = ViewData["ImmediateTheme"] as string;
}
<!DOCTYPE html>
<html lang="@currentCulture" @(immediateTheme != null ? $"data-theme=\"{immediateTheme}\"" : "")>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - SmartSkor</title>

  <!-- Inter Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="~/css/site.css" />

  <!-- Immediate theme script to prevent flash -->
  <script>
    (function() {
      var immediateTheme = '@(immediateTheme ?? "")';
      if (immediateTheme) {
        localStorage.setItem('theme', immediateTheme);
      }
      var theme = localStorage.getItem('theme') || 'system';
      if (theme === 'system') {
        var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
      } else {
        document.documentElement.setAttribute('data-theme', theme);
      }
    })();
  </script>
</head>
<body>
  <!-- Settings Button -->
  <div class="settings-container">
    <button type="button" class="settings-btn" id="settingsBtn" aria-label="Settings">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 4V2" />
        <path d="M15 16v-2" />
        <path d="M8 9h2" />
        <path d="M20 9h2" />
        <path d="M17.8 11.8 19 13" />
        <path d="M15 9h.01" />
        <path d="M17.8 6.2 19 5" />
        <path d="m3 21 9-9" />
        <path d="M12.2 6.2 11 5" />
      </svg>
    </button>

    <!-- Settings Popover -->
    <div class="settings-popover" id="settingsPopover">
      <div class="settings-header">
        <span>Settings</span>
        <button type="button" class="theme-toggle-icon" id="themeToggleIcon" aria-label="Toggle theme">
          <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="4" />
            <path d="M12 2v2" />
            <path d="M12 20v2" />
            <path d="m4.93 4.93 1.41 1.41" />
            <path d="m17.66 17.66 1.41 1.41" />
            <path d="M2 12h2" />
            <path d="M20 12h2" />
            <path d="m6.34 17.66-1.41 1.41" />
            <path d="m19.07 4.93-1.41 1.41" />
          </svg>
          <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z" />
          </svg>
        </button>
      </div>

      <div class="settings-section">
        <div class="settings-label">Language</div>
        <div class="settings-options">
          <a href="/Culture/Set?culture=en&returnUrl=@encodedReturnUrl"
             class="settings-option @(isEnglish ? "active" : "")">
            <span>🇬🇧</span>
            <span>English</span>
          </a>
          <a href="/Culture/Set?culture=tr&returnUrl=@encodedReturnUrl"
             class="settings-option @(!isEnglish ? "active" : "")">
            <span>🇹🇷</span>
            <span>Türkçe</span>
          </a>
        </div>
      </div>

      <div class="settings-section">
        <div class="settings-label">Theme</div>
        <div class="settings-options">
          <button type="button" class="settings-option" data-theme="light">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="4" />
              <path d="M12 2v2" />
              <path d="M12 20v2" />
              <path d="m4.93 4.93 1.41 1.41" />
              <path d="m17.66 17.66 1.41 1.41" />
              <path d="M2 12h2" />
              <path d="M20 12h2" />
              <path d="m6.34 17.66-1.41 1.41" />
              <path d="m19.07 4.93-1.41 1.41" />
            </svg>
            <span>Light</span>
          </button>
          <button type="button" class="settings-option" data-theme="dark">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z" />
            </svg>
            <span>Dark</span>
          </button>
          <button type="button" class="settings-option" data-theme="system">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="14" x="2" y="3" rx="2" />
              <line x1="8" x2="16" y1="21" y2="21" />
              <line x1="12" x2="12" y1="17" y2="21" />
            </svg>
            <span>System</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  @RenderBody()

  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <script src="~/js/site.js"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>